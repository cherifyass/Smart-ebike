<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.esir.si.smarte_bike.Details">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_margin="20dp"
        android:weightSum="1">

        <TextView
            android:text="@string/details_itineraire"
            style="@style/titre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="none"
        android:layout_weight="1">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:shrinkColumns="3"
        android:layout_marginLeft="15dp"
        android:gravity="center"
        android:id="@+id/tab2" >


    <TableRow
        android:id="@+id/row1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
            <TextView
                android:id="@+id/label_depart"
                android:text="Départ"
                style="@style/titreColonne"
                android:layout_width="0dp"
                android:width="150dp"
                android:layout_weight="1" />
            <TextView
                android:id="@+id/depart"
                android:layout_weight="2"
                android:layout_width="0dp" />
    </TableRow>

    <TableRow
        android:id="@+id/row2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
        <TextView
            android:id="@+id/label_arrivee"
            android:text="Arrivée"
            android:layout_weight="1"
            style="@style/titreColonne"
            android:layout_width="0dp"
            android:width="150dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/arrivee"
            android:layout_weight="2"
            android:layout_width="0dp" />
    </TableRow>

    <TableRow
        android:id="@+id/row3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
        <TextView
            android:id="@+id/label_date"
            android:text="Date"
            android:layout_weight="1"
            style="@style/titreColonne"
            android:layout_width="0dp"
            android:width="150dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/date"
            android:layout_weight="2"
            android:layout_width="0dp"  />
    </TableRow>

    <TableRow
        android:id="@+id/row4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
        <TextView
            android:id="@+id/label_distance"
            android:text="Distance"
            android:layout_weight="1"
            style="@style/titreColonne"
            android:layout_width="0dp"
            android:width="150dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/distance"
            android:layout_weight="2"
            android:layout_width="0dp"  />
    </TableRow>

    <TableRow
        android:id="@+id/row5"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
        <TextView
            android:id="@+id/label_duree"
            android:text="Durée"
            style="@style/titreColonne"
            android:layout_width="0dp"
            android:width="150dp"
            android:layout_weight="1" />
        <TextView
            android:id="@+id/duree"
            android:layout_weight="2"
            android:layout_width="0dp" />
    </TableRow>



    <TableRow
        android:id="@+id/row6"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
        <TextView
            android:id="@+id/label_calories"
            android:text="Calories dépensées"
            style="@style/titreColonne"
            android:layout_width="0dp"
            android:width="150dp"
            android:layout_weight="1" />
        <TextView
            android:id="@+id/calories"
            android:layout_width="0dp"
            android:layout_weight="2" />
    </TableRow>


        <TableRow
        android:id="@+id/row7"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
        <TextView
            android:id="@+id/label_vitesseMax"
            android:text="Vitesse max"
            style="@style/titreColonne"
            android:layout_width="0dp"
            android:width="150dp"
            android:layout_weight="1" />
        <TextView
            android:id="@+id/vitesseMax"
            android:layout_weight="2"
            android:layout_width="0dp" />
    </TableRow>


        <TableRow
            android:id="@+id/row8"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
            <TextView
                android:id="@+id/label_vitesseMoy"
                android:text="Vitesse moyenne"
                style="@style/titreColonne"
                android:layout_width="0dp"
                android:width="150dp"
                android:layout_weight="1" />
            <TextView
                android:id="@+id/vitesseMoy"
                android:layout_weight="2"
                android:layout_width="0dp" />
        </TableRow>



    </LinearLayout>
</ScrollView>

</LinearLayout>
