<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.esir.si.smarte_bike.Historique">
    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/descriptionLogo"
        android:src="@drawable/logo" />
    <TextView
        android:text="Mes Itinéraires"
        style="@style/titre"
        />

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:shrinkColumns="3"
        >

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView android:text="@string/arrivée"
                style="@style/titreColonne"
                android:layout_column="0"/>

            <TextView android:text="@string/date"
                style="@style/titreColonne"
                android:layout_column="1"/>

            <TextView android:text="@string/plus"
                style="@style/titreColonne"
                android:layout_column="2"/>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView android:text="3 bd de Sévigné\n35000 Rennes"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_column="0"/>

            <TextView android:text="20/03/2015"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_column="1"/>

            <Button xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/boutonDétails"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="->"
                android:textColor="#FFF"
                android:textSize="40dp"
                android:background="@drawable/mybutton"
                android:onClick="goToDetails"/>
        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView android:text="14 avenue Janvier\n35000 Rennes"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_column="0"/>

            <TextView android:text="22/03/2015"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_column="1"/>

            <Button xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="->"
                android:textColor="#FFF"
                android:textSize="40dp"
                android:background="@drawable/mybutton"
                android:onClick="goToDetails"/>
        </TableRow>

    </TableLayout>

</LinearLayout>
