<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.esir.si.smarte_bike.navigation.Itineraire"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/tv_depart"
            android:id="@+id/tv_depart"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:singleLine="false"
            android:phoneNumber="false"
            android:textStyle="bold" />

        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/auto_comp_tv_depart"
            android:id="@+id/auto_comp_tv_depart"
            android:completionThreshold="2"
            android:singleLine="true"
            android:imeOptions="actionNext" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cb_myposition"
            android:id="@+id/cb_myposition"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:text="@string/tv_arrivee"
            android:id="@+id/tv_arrivee"
            android:gravity="center"
            android:completionThreshold="2"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textStyle="bold" />

        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/auto_comp_tv_arrivee"
            android:id="@+id/auto_comp_tv_arrivee"
            android:singleLine="true"
            android:imeOptions="actionDone"/>

        </LinearLayout>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cb_assistance"
            android:id="@+id/cb_assistance"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/cb_assistance">

        <Button
            android:layout_width="197dp"
            android:layout_height="wrap_content"
            style="@style/bouton"
            android:text="@string/btn_go"
            android:id="@+id/btn_go"
            android:onClick="computeItinerary"
            android:layout_gravity="right"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="142dp"
        android:layout_marginTop="50dp"
        android:id="@+id/box_result_itinerary"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_distance"
            android:id="@+id/label_distance"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_duration"
            android:id="@+id/label_duration"
            android:layout_alignTop="@+id/value_duration"
            android:layout_alignEnd="@+id/label_distance" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/value_distance"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/value_duration" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/value_duration"
            android:layout_marginStart="19dp"
            android:layout_below="@+id/value_distance"
            android:layout_toEndOf="@+id/label_distance"
            android:layout_marginTop="16dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/bouton"
            android:text="@string/btn_start_itinerary"
            android:id="@+id/btn_start_itinerary"
            android:layout_below="@+id/label_duration"
            android:layout_toEndOf="@+id/label_duration"
            android:nestedScrollingEnabled="false"
            android:onClick="startNavigation" />
    </RelativeLayout>

</LinearLayout>
