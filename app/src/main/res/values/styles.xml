<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">
        <!-- Customize your theme here. -->
    </style>



    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>



    <style name="bouton">
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/background_bouton</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textSize">16dp</item>
        <item name="android:layout_marginTop">30dp</item>

    </style>
    <style name="titre">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ff3cc0dd</item>
        <item name="android:textSize">20dp</item>
        <item name="android:paddingBottom">15dp</item>
    </style>
    <style name="titreNoir">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">20dp</item>
        <item name="android:paddingBottom">15dp</item>
    </style>
    <style name="titreColonne">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ffd35057</item>
        <item name="android:paddingBottom">15dp</item>
    </style>
    <style name="boutonDetails">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:gravity">center</item>
        <item name="android:text">-></item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textSize">20dp</item>
        <item name="android:background">@drawable/mybutton</item>
    </style>
    <style name="HTexteC1">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_column">0</item>
    </style>
    <style name="HTexteC2">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_column">1</item>
    </style>

    <!-- météo styles -->
    <style name="valData" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="tempStyle" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">#2E9AFE</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">100dp</item>
    </style>
</resources>
